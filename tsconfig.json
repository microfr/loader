{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": false,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "typeRoots": ["./types", "./node_modules/@types"],
    "include": [
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "node_modules/**/*",
        "**/*.spec.tsx"
    ]
}